{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchPackagePatterns": ["org.jetbrains.kotlin"],
      "groupName": "kotlin dependencies"
    },
    {
      "matchPackagePatterns": ["io.github.lsd-consulting"],
      "groupName": "lsd dependencies"
    },
    {
      "matchDepTypes": [
        "testImplementation",
        "testCompileOnly",
        "testRuntimeOnly",
        "testApi"
      ],
      "commitMessagePrefix": "test(deps): "
    },
    {
      "matchDepTypes": [
        "implementation",
        "api",
        "compileOnly",
        "runtimeOnly"
      ],
      "commitMessagePrefix": "fix(deps): "
    },
    {
      "matchManagers": ["github-actions"],
      "commitMessagePrefix": "ci(deps): "
    }
  ],
  "commitMessagePrefix": "chore(deps): "
}
