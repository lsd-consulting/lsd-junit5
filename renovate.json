{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "at any time"
  ],
  "platformAutomerge": true,
  "automergeType": "pr",
  "packageRules": [
    {
      "groupName": "Test dependencies",
      "matchDepTypes": ["test"],
      "commitMessagePrefix": "test:",
      "schedule": [
        "at any time"
      ],
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "groupName": "LSD dependencies",
      "matchPackageNames": [
        "io.github.lsd-consulting:**"
      ],
      "commitMessagePrefix": "fix:",
      "schedule": [
        "at any time"
      ],
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "groupName": "Kotlin dependencies",
      "matchPackageNames": [
        "org.jetbrains.kotlin*",
        "org.jetbrains.dokka*"
      ],
      "commitMessagePrefix": "fix:",
      "schedule": [
        "at any time"
      ],
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "commitMessagePrefix": "ci:",
      "schedule": [
        "before 4am on monday"
      ],
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "groupName": "All other production dependencies",
      "excludePackageNames": [
        "io.github.lsd-consulting:**",
        "org.jetbrains.kotlin*",
        "org.jetbrains.dokka*"
      ],
      "matchDepTypes": ["dependencies"],
      "commitMessagePrefix": "fix:",
      "schedule": [
        "at any time"
      ],
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"]
    },
    {
      "groupName": "Major version updates (manual review required)",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
